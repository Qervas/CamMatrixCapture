<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CameraMatrixCapture.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CameraMatrixCapture.Dialogs"
    Title="Settings"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="SaveButton_Click">

    <ScrollViewer MaxHeight="500" MaxWidth="450">
        <StackPanel Spacing="16">

            <!-- Camera Settings -->
            <TextBlock Text="Camera Settings" FontSize="18" FontWeight="SemiBold"/>

            <StackPanel>
                <TextBlock Text="Exposure Time (μs)" Margin="0,0,0,4"/>
                <Slider x:Name="ExposureSlider" Minimum="100" Maximum="80000" Value="40000"
                        StepFrequency="100" TickFrequency="10000" TickPlacement="Outside"/>
                <TextBlock x:Name="ExposureValueText" Text="40000 μs" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Gain (dB)" Margin="0,0,0,4"/>
                <Slider x:Name="GainSlider" Minimum="0" Maximum="10" Value="1" StepFrequency="0.1"/>
                <TextBlock x:Name="GainValueText" Text="1.0 dB" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Capture Settings -->
            <TextBlock Text="Capture Settings" FontSize="18" FontWeight="SemiBold" Margin="0,16,0,0"/>

            <StackPanel>
                <TextBlock Text="Parallel Groups" Margin="0,0,0,4"/>
                <NumberBox x:Name="ParallelGroupsBox" Value="4" Minimum="1" Maximum="12" SpinButtonPlacementMode="Inline"/>
                <TextBlock Text="Number of cameras to capture simultaneously"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Stagger Delay (ms)" Margin="0,0,0,4"/>
                <NumberBox x:Name="StaggerDelayBox" Value="150" Minimum="0" Maximum="1000" SpinButtonPlacementMode="Inline"/>
                <TextBlock Text="Delay between camera triggers within a group"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Output Settings -->
            <TextBlock Text="Output Settings" FontSize="18" FontWeight="SemiBold" Margin="0,16,0,0"/>

            <StackPanel>
                <TextBlock Text="Output Directory" Margin="0,0,0,4"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="OutputPathBox" Grid.Column="0" PlaceholderText="neural_dataset"/>
                    <Button Grid.Column="1" Content="Browse" Margin="8,0,0,0" Click="BrowseButton_Click"/>
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</ContentDialog>
